<h1>Upload Image URL!</h1>

<div class="container">
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <%= yield %>
</div>

<%= form_for(@image, url: {action: "create"}, class: 'js-form-image') do |f| %>
    <%= f.text_field :url, placeholder: 'Image URL'%><br />
    <%= f.text_field :tag_list, placeholder: 'Tags (comma separated)', size: "30", value: f.object.tag_list.to_s %><br />
    <%= f.submit "Create" %>

<% end %>

<% if @image.errors.any? %>
    <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
<% end %>
